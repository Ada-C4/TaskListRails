<h1>Task List</h1>
<div style="text-align:center;">
	<table>
		<% @tasks.each do |task| %>
		  <tr>
		    <td class="name"><%= link_to "#{task.name}", "/tasks/#{task.id}" %></td>
		    <td><%= button_to "Delete", "/tasks/#{task.id}", method: "delete", data: { :confirm => "Are you sure you want to delete this task?" } %></td>
		  </tr>
	  <% end %>
	</table>
</div>