<form method="post"
  <% if @method == :delete %>
    action="/delete_confirmation"
  <% end %>
>
  <table class="table table-hover">
    <thead>
      <tr>
          <td class="text-center">Done</td>
        <td>Task</td>
        <td>Description</td>
        <td>Completed Date</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <% completed = !task.completed_date.nil? %>
      <tr>
          <td class="text-center"><label>
          <input type="checkbox" name = "ids[]" value="<%= task.id %>"></label></td>
        <td <% if completed %>
          class="strikethru"
          <% end %>
          ><%= task.name %></td>
        <td <% if completed %>
          class="strikethru"
          <% end %>
          ><%= task.description %></td>
        <td>
          <% if completed %>
            <%= task.completed_date.strftime("%b %-d, %Y") %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
