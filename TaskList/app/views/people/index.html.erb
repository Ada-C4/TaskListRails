<% provide :title, "People That Have to do Sh*t" %>
<div class="row">
  <div class="col-md-2 col-md-offset-9">
    <a class="btn btn-lg nav-btn" role="button" href="tasks/new"><span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span> New</a>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email address</td>
      <td># to do</td>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.name, "/person/#{person.id}" %></td>
        <td><%= person.email %></td>
        <td><%= num_incomplete(person.id) %></td>
      </tr>
    <% end %>
  </tbody>
