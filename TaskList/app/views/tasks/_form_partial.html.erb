<%= form_for @task, action: action do |f| %>
  <div class='legend'><h1>What Do You Need to Get Done?</h1></div>
  <fieldset>
    <label for='name'>Task:</label>
    <%= f.text_field :name, class: 'form-field', maxlength: '30' %>
    <br><br>
    <label for='description'>Description:</label>
    <%= f.text_area :description, html: {class: 'form-field'}%>
    <br><br><br>
    <%= f.submit class:'create-button'%>
  </fieldset>
<% end %>