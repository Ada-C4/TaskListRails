<h1>Task List</h1>

<div id='tasklist'>
  <% @tasks.each do |task| %>
    <div id='task'><%= link_to task.name, "/tasks/#{task.id}" %> - <%= button_to "Delete Task", {action: "delete", id: task.id }, method: :delete, data: {confirm: 'Are you sure you want to delete that?'} %></div>
  <% end %>
</div> 
