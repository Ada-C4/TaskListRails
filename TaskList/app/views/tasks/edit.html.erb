<%= form_for :task, url: { action: 'update' }, method: :patch do |f| %>
  <div class='legend'><h1>Update Your Tasks!</h1></div>
  <fieldset>
    <label for='name'>Task:</label>
    <%= f.text_field :name, class: 'form-field'%>
    <br><br>
    <label for='description'>Description:</label>
    <%= f.text_area :description, html: {class: 'form-field', placeholder: 'Here\'s some stuff.'}%>
    <br><br><br>
    <%= f.submit class:'create-button'%>
  </fieldset>
<% end %>