<form id="check_complete" action="/complete" method="put">
<table>
  <thead>
  <tr>
    <th>
      Task
    </th>
    <th>
      Who's Responsible?
    </th>
    <th>
      Done?
    </th>
    <th>
      Delete?
    </th>
  </tr>
  </thead>
  <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, "/tasks/#{task.id}" %></td>
        <td>
          <%= task.person.name %>
        </td>
        <td>
        <% if task.completed_at == nil %>
          <%= button_to "Complete?", { action: "toggle_complete", id: task.id }, method: :patch, class: "complete_button" %>
        <% else %>
          <%= task.completed_at %>
        <% end %>
        </td>
        <td><%= button_to "Delete?", { action: "destroy", id: task.id }, method: :delete, data: { confirm: "Last chance...you sure?" }, class: "delete_button" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
</form>


<div class="add_task"><%= link_to "+Add a new task", "/tasks/new", class: "add_task_link"%></div>


