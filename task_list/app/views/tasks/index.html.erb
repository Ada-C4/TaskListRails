<ul>
   <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, "/tasks/#{task.id}" %>
      <%= button_to "Delete?",{ action: "destroy", id: task.id }, method: :delete, data: { confirm: "Last chance...you sure?" }, class: "delete_button" %>
    </li>
    <% end %>
</ul>

<%= link_to "+Add a new task", "/tasks/new" %>
