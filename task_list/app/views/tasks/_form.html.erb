<%= form_for @task, url:({action: "#{@action}"}) do |f| %>
  <fieldset>
    <legend>Task Information</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.collection_select(:person_id, Person.all, :id, :name, prompt: "Who's going to do this?") %>
  </fieldset>
    <%= f.submit class: "submit"%>
<% end %>
