<h1>Task List</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3">
          <h2>Your Complete Task List</h2>
        </th>
      </tr>
      <tr>
        <th>
          Complete?
        </th>
        <th>
          Task
        </th>
        <th>
          Completed Date
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td>
          <% if task.completed_date.nil? %>
            empty box
          <% else %>
            checked box
          <% end %>
        </td>
        <td>
          <%= link_to task.name, "/tasks/#{task.id}" %>
        </td>
        <td>
          <%= task.completed_date.strftime("%m/%d/%Y") if !task.completed_date.nil? %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
