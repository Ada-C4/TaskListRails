<nav>
  <%= link_to "New Task", "/tasks/new" %>
</nav>
<h1>Task List</h1>
  <ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, "/tasks/#{task.id}", class: "task_link" %>
      <%= button_to "Delete", "/tasks/#{task.id}", method: "delete", data: { confirm: "Are you sure you want to delete this task?" } %>
    </li>
  <% end %>
  </ul>
