<a href="tasks/new">Add a new Task</a>
<div class="tasks">
  <ul>
    <% @tasks.each do |task| %>
      <li> <%= link_to "Task: #{task.name}", "/tasks/#{task.id}" %>
        <%= button_to "delete", {action: 'destroy', id: task.id }, method: :delete, data: { confirm: "Are you sure?" } %>

    <% end %>
  </ul>
</div>
