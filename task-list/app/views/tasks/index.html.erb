<h1> Here are your tasks! </h1>
<h1> We are going to get so much done! </h1>

<%= image_tag "shia_squat copy.gif", width: "500", height: "auto" %>

<ol>
  <% @tasks.each do |task| %>
    <li><a href=<%=task.id%>><%= task.name %></a>: <%= task.description%>
    <%= button_to "Delete Task", { action: "delete", id: task.id },
                                    method: :delete, data: { confirm: "Are you sure?" } %>
      <%= task.completed%>
    </li>
  <%end%>
</ol>
<%= link_to "Add a new task", "new" %>
