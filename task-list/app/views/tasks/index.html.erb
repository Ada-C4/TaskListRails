  <table>
    <thead>
      <tr>
        <th colspan="5">
          <h1>Task List</h1>
        </th>
      </tr>
      <tr>
        <th></th>
        <th>
          Task
        </th>
        <th>
          Completed Date
        </th>
        <th>
          Who?
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td class="bigger_checkbox">
          <% if task.completed_date.nil? %>
            <%= link_to "☐", "/tasks/#{task.id}/complete", method: :patch %>
            <% strike = "incomplete" %>
          <% else %>
            ☑
            <% strike = "complete" %>
          <% end %>
        </td>
        <td class="<%= strike %>" >
          <%= link_to task.name.capitalize, "/tasks/#{task.id}" %>
        </td>
        <td>
          <%= task.completed_date.strftime("%m/%d/%Y") if !task.completed_date.nil? %>
        </td>
        <td>
          <%= task.person.name if !task.person_id.nil?  %>
        </td>
        <td class="edit_delete">
          <%= link_to "✎", "/tasks/#{task.id}/edit", method: :get %>
          <%= link_to "♻︎", "/tasks/#{task.id}", method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
