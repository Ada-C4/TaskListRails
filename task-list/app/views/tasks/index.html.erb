<h1>Task List</h1>
<table>
  <th id="status_header">
    Status
  </th>
  <th id="name_header">
    Name
  </th>
  <th>
    Person
  </th>
  <th></th>
  <% @tasks.each do |task| %>
    <tr>
      <td id="checkbox_cell">
        <% if task.comp_date.nil? %>
          <%= link_to "&#9744;".html_safe, "/tasks/#{task.id}/complete",  method: "patch", class: "checkbox_link" %>
        <% else %>
          <%= link_to "&#9745;".html_safe, "/tasks/#{task.id}/incomplete",  method: "patch", class: "checkbox_link" %>
        <% end %>
      </td>
      <td id="task_link_cell">
        <%= link_to task.name, "/tasks/#{task.id}" %>
      </td>
      <td id="person_cell">
        <% if !task.person.nil? %>
          <%= task.person.name %>
        <% end %>
      </td>
      <td id="delete_button_cell">
        <%= button_to "Delete", "/tasks/#{task.id}", method: "delete", data: { confirm: "Are you sure you want to delete this task?" } %>
      </td>
    </tr>
  <% end %>
</table>
