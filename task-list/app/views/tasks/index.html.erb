<h1>To Do:</h1>
<div class = "tasks">
<table>
  <tbody>
    <% @tasks.each do |task| %>
      <%if task.completed_at == nil %>
        <tr>
          <td><%= link_to '<i class="fa fa-square-o fa-fw"></i>'.html_safe, "tasks/#{task.id}/complete", method: :patch %></td>
          <td><%= link_to task.name, "/tasks/#{task.id}" %></td>
          <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, "/tasks/#{task.id}/edit", class: "edit-link" %></td>
          <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, "/tasks/#{task.id}", method: :delete, data: { confirm: 'Confirm Delete' }, class: "delete-link" %></td>
          <td><% if !task.person.nil? %>
                <span class="person">Task for: <%= task.person.name %></span>
              <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
    <% @tasks.each do |task| %>
      <%if task.completed_at != nil %>
        <tr>
          <td><%= link_to '<i class="fa fa-check-square-o fa-fw"></i>'.html_safe, "tasks/#{task.id}/incomplete", method: :patch %></td>
          <td><%= link_to task.name, "/tasks/#{task.id}", class: "completed-task" %></td>
          <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, "/tasks/#{task.id}/edit", class: "edit-link" %></td>
          <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, "/tasks/#{task.id}", method: :delete, data: { confirm: 'Confirm Delete' }, class: "delete-link" %></td>
          <td><% if !task.person.nil? %>
                <span class="person">Task for: <%= task.person.name %></span>
              <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to "Create A New Task", "tasks/new" %>
<br>
<%= link_to "View People", "/people/" %>
