<div class="page_element">
  <table>
    <thead>
      <tr>
        <th colspan="4">
          <h1>Task List</h1>
        </th>
      </tr>
      <tr>
        <th>

        </th>
        <th>
          Task
        </th>
        <th>
          Completed Date
        </th>
        <th>

        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td class="bigger_checkbox">
          <% if task.completed_date.nil? %>
            <%= link_to "â˜", "/tasks/#{task.id}", method: :patch %>
            <% strike = "incomplete" %>
          <% else %>
            â˜‘
            <% strike = "complete" %>
          <% end %>
        </td>
        <td class=<%= strike %>>
          <%= link_to task.name.capitalize, "/tasks/#{task.id}" %>
        </td>
        <td>
          <%= task.completed_date.strftime("%m/%d/%Y") if !task.completed_date.nil? %>
        </td>
        <td class="delete">
          <%= button_to "Delete", "/tasks/#{task.id}", method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
