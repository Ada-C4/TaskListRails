<nav>
  <%= link_to "New Task", "/tasks/new" %>
</nav>
<h1>Task List</h1>
<table>
  <% @tasks.each do |task| %>
    <tr>
      <td id="complete_button">
        <%= button_to "Complete", "/tasks/#{task.id}",  method: "patch" %>
      </td>
      <td id="task_link">
        <%= link_to task.name, "/tasks/#{task.id}" %>
      </td>
      <td id="delete_button">
        <%= button_to "Delete", "/tasks/#{task.id}", method: "delete", data: { confirm: "Are you sure you want to delete this task?" } %>
      </td>
    </tr>
  <% end %>
</table>
