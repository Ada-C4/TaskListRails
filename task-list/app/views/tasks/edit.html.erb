<nav>
  <%= link_to "Task List", "/tasks" %>
</nav>
<h1>Edit Task</h1>
<%= form_for @task do |f| %>
  <fieldset>
    <legend>Task Details</legend>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :comp_date, 'Completion Date' %>
    <%= f.datetime_field :comp_date %>
  </fieldset>
  <br>
  <br>
  <%= f.submit %>
<% end %>
