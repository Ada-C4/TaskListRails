<!-- the next like is rails magic and makes it so the text area is populated with the task -->
<%= form_for @task, url: "/tasks/#{@task.id}/edit", html: {method: "patch"} do |f| %>
    <h1 class="new-input">Edit your task here</h1>
      <div class="form-field">
      <%= f.label :task %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :writer_id, "Whose Task?" %>
      <%= f.collection_select(:writer_id, Person.all, :id, :alt_name, prompt: "Select the Tasker") %>

      <%= f.submit %>
      </div>
<% end %>
