<%= form_for @task, url: { action: @action}, method: @method do |f| %>

  <fieldset>
    <legend><%=@title%></legend>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :person_id, "Person" %>

    <%= f.collection_select(:person_id, Person.all, :id, :name,
    prompt: "Select Person for Task:") %>


  </fieldset>
  <%= f.submit %>
<% end %>
