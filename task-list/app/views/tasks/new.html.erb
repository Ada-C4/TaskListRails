<%= form_for @task, url: "/tasks/#{@task.id}", method: @method do |f| %>
  <fieldset>
    <legend><%= @title %> a Task!</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>
  <%= f.submit %>
  <%= image_tag "https://33.media.tumblr.com/8092a0b1f2aa7d8cf7fc8d58f7f36155/tumblr_n4fkyi9suN1qdwrtpo1_400.gif" %>
<% end %>
