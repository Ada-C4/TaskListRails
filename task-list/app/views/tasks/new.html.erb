<%= form_for @task do |f| %>

    <h1 class="new-input">Input your task here</h1>
      <div class="form-field">
      <%= f.label :task%>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :person_id, "Whose Task?" %>
      <%= f.collection_select(:person_id, Person.all, :id, :alt_name, prompt: "Select the Tasker") %>

  <%= f.submit %>
  </div>
<% end %>
