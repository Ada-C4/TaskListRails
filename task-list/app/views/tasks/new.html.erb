<%= form_for @task do |f| %>
  <fieldset>
    <legend>Add a New Task  </legend>
    <%= f.label :name %>
    <%=f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description, size: "50x10" %>
    <br>
    <%= f.label :completed_date %>
    <%= f.date_field :completed_date %>

  </fieldset>
  <%= f.submit %>
  <% end %>
