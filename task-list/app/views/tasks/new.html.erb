<%= form_for @task do |f| %>
  <fieldset>
    <legend>Add a Task</legend>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.label :completed_date %>:
  <%= f.text_field :completed_date %><br />

  <%= f.submit %>
</fieldset>
<% end %>
