<fieldset>
  <%= form_for @task, url:{action: "#{@action}" } do |f| %>
  <legend><h1><%= @title %></h1>  </legend>
  <%= f.label :name %>
  <br>
  <%=f.text_field :name %>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.label :completed_date %>
  <br>
  <%= f.date_field :completed_date %>
  <br>
  <br>
  <%= f.submit %>

</fieldset>
<% end %>
