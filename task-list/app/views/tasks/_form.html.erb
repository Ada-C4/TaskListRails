<%= form_for @task do |f| %>
  <fieldset>
    <legend>Task Details</legend>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :comp_date, 'Completion Date' %>
    <%= f.datetime_field :comp_date %>

    <%= f.label :person_id, 'Owner' %>
    <%= f.collection_select(:person_id, Person.all, :id, :name, prompt: "Select Owner") %>
  </fieldset>
  <br>
  <br>
  <%= f.submit %>
<% end %>
