<section>
  <h1>Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><a href='/tasks/<%= task.id %>'><%= task.name %></a>
        <%= link_to 'Edit',  { action: :edit, id: task.id }, method: :get %>
      </li>
    <% end %>
  </ul>

  <a href="/tasks/" class="bottom_of_page_link">Back to List</a>

</section>
