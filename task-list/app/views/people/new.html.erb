<%= form_for @person, url: { action: @action } do |f| %>
  <fieldset>
    <legend><%= @title %> a Person !</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </fieldset>
  <%= f.submit %>
  <%= link_to(image_tag("https://33.media.tumblr.com/8092a0b1f2aa7d8cf7fc8d58f7f36155/tumblr_n4fkyi9suN1qdwrtpo1_400.gif"), "/" ) %>
<% end %>
