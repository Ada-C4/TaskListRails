<%= form_for @task, url: {action: "#{@url}"} do |f| %>
  <fieldset>
    <legend> <%= @legend %></legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :person_id, "Person" %>
    <%= f.collection_select(:person_id, Person.all, :id, :name,
  prompt: "Who does this task belong to?") %>
  </fieldset>
  <%= f.submit %>
<% end %>
