<h1>Here are all the tasks!</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= task.name %> <%= link_to "Show", "/tasks/#{task.id}" %>
          <%= link_to "Delete", "/tasks/#{task.id}", :method => :delete,
          :onclick => "return confirm('Are you sure?')"%></li>
    <% end %>
    <%= link_to "Add a New Task", "tasks/new" %>
  </ul>
