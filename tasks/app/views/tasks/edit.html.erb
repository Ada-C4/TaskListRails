<%= form_for @task, url: {action: 'update'}, method: :patch do |f| %>
  <fieldset>
    <legend>
      Task information:
    </legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :completed %>
    <%= f.date_field :completed %>
    <%= f.submit class: 'update_button'%>
  </fieldset>
<% end %>
