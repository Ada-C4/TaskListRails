<h1>Here's the task info</h1>
<table border="1" style="border-collapse: collapse; text-align: center">
  <thead>
      <tr>
        <th colspan="2">Task info</th>
      </tr>
    </thead>
    <tbody>
    <% @task_info_hash.each do |key, value| %>
      <tr>
        <td><strong><%= key %>:</strong></td>
        <td><%= value %></td>
      </tr>
    <% end %>
    </tbody>
</table>
