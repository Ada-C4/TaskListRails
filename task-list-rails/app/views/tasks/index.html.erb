<div id="table">
  <table>
    <thead>
      <tr>
        <td colspan="2" id="title">
          My Tasks
        </td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to "details", "/tasks/#{task.id}" %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="2" id="table_nav">
          <%= link_to "new task", "/tasks/" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
