<div id="table">
  <table>
    <thead>
        <tr>
          <td colspan="3" id="title"><%= "#{@person.name}'s Tasks" %></td>
        </tr>
      </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <% if !task.completed %>
          <td><i class="icon-check-empty"></i></td>
        <% else %>
          <td><i class="fa fa-check-square-o"></i></td>
        <% end %>
        <td><%= task.name %></td>
        <td><%= link_to "details", "/tasks/#{task.id}" %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="5" id="table_nav">
          <%= link_to "new task", "/tasks/new" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
