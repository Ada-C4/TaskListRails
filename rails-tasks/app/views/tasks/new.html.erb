<div class="on_paper">

  <%= form_for @task do |f| %>
    <fieldset>
      <legend>Post Information</legend>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

    </fieldset>

    <%= f.submit%>

  <% end %>

</div>
