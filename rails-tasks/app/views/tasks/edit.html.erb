<div class="on_paper">
<h1>editing <%= @old_name %></h1>
  <%= form_for @task, url: "/tasks/#{@task.name}/update", method: "patch" do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
    <br>
      <%= f.label :description %>
      <%= f.text_field :description %>

