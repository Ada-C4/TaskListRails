<h1>Create a new task</h1>

<%= form_for @task do |f| %>
  <fieldset>
    <legend>Task Information</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :completed_at %>
    <%= f.datetime_field :completed_at %>
  </fieldset>
  <%= f.submit %>
<% end %>
