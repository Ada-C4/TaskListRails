<div class="container">
  <h1><%= @person.name %></h1>
  <div class="show-person">
    <img class="profile-pic" src= "<%= @person.photo %>">
  </div>
  <div class="show-person">
    <p>
      <%= @person.name %> is very busy. See everything they're up to!
    </p>
    <p>
      <%= link_to " task list", "/people/#{@person.id}/tasks", class: "btn btn-default" %>
    </p>
    <p>
      Find out more about <% @person.name %> on their bio page <a href = "http://en.wikipedia.org/wiki/<%= @person.name %>">here!</a>
    </p>
  </div>
</div>
