<div class="container">
  <h1><%= @task.name %></h1>
    <table class="table table-hover">
      <tr >
        <th id="taskie">
          task
        </th>
        <th>
          description
        </th>
        <th>
          completed
        </th>
      </tr>
        <tr>
         <td>
          	<div><%= @task.name %></div>
         </td>
         <td>
          	<div><% if @task.description == "" %><%= "n/a" %><% end %><%= @task.description %></div>
         </td>
         <td>
          	<div><% if @task.completed_at.nil? %><%= "in progress :)" %><% end %><%= @task.completed_at %></div>
         </td>
       </tr>
    </table>
    <%= button_to "edit", "/tasks/#{@task.id}/edit", method: :get, class: "btn btn-default" %>
    <%= link_to "home", "/tasks/", class: "btn btn-default" %>
  </div>
