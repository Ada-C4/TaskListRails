<%= form_for @task do |f| %>
  <fieldset>
    <legend><%= legend %></legend>
    <%=f.label :name %>
    <%=f.text_field :name %>
    <br><br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :person_id, "Owner:" %>
    <%= f.collection_select(:person_id, Person.all, :id, :name, prompt: "Select the owner:")%>
    <br>
  </fieldset>
  <br>
  <%= f.submit(button_text) %>
<% end %>
