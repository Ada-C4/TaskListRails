<div class="container">
  <h1>Task List</h1>
    <table class="table table-hover">
      <tr >
        <th>
        </th>
        <th>
        </th>
        <th>
          OWNER
        </th>
        <th>
          TASK
        </th>
        <th>
        </th>
        <th>
        </th>
      </tr>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= link_to "show task", "/tasks/#{task.id}", class: "btn btn-default" %>
          </td>
          <td>
            <%= button_to "edit task", "/tasks/#{task.id}/edit", method: :get, class: "btn btn-default" %>
          </td>
          <td>
            <div><%= task.person.name %></div>
          </td>
         <td>
          	<div><%= task.name %></div>
         </td>
         <td>
           <div>
             <% if task.completed_at.nil? %>
              <%= button_to "complete", "/tasks/#{task.id}/complete", method: :patch, class: "btn btn-default" %>
                <!-- <img class="nocheckmark" src="/assets/white.png" alt="no checkmark"/> -->
              <% else %>
                <img class="checkmark" src="/assets/checkmark3.png" alt="checkmark"/>
              <% end %>
            </div>
          	<!-- <div><% if task.completed_at.class == NilClass %><%= "in progress :)" %><% end %><%= task.completed_at %></div> -->
         </td>
         <td>
           <%= button_to "", "/tasks/#{task.id}", method: :delete, class: "btn btn-default", class: "delete", data: { confirm: 'Are you sure?' } %>
           <!-- onclick="return confirm('Are you sure?')" -->
         </td>
       </tr>
      <% end %>
    </table>
    <a class="btn btn-default" href="/tasks/new"><img src="/assets/edit.png" class = "icon">Add a task here</a>
    <a class="btn btn-default" href="/people/new"><img src="/assets/edit.png" class = "icon">Add a person here</a>
</div>
