<% title = params[:action] %>
<% if title == "edit" %>
  <h1> Edit a task</h1>
<% else %>
  <h1> Add a new task </h1>
<% end %>

<h2>Task Information</h2>
<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :person_id, "Assigned to: " %>
  <%= f.collection_select(:person_id, Person.all, :id, :name) %>
  <%= f.submit %>

<% end %>
