<h1>Tasks</h1>


<a href="/tasks/new">
<table id="add_task_button">
  <tr>
    <td>
      <i class="fa fa-space-shuttle fa-4x"></i>
    </td>
    <td id="add_text">
      Add a new task
    </td>
    <td>
      <i class="fa fa-space-shuttle fa-4x fa-rotate-180 fa-flip-horizontal"></i>
    </td>
  </tr>
</table>
</a>

<div id="button_box">

  <div id="background_mod">


  <% @tasks.each do |task| %>
  <a id="task_link" href="/tasks/<%= task.id %>"
    <% if task.completed_date != nil %>
      class = "completed_task"
    <% end %>
    >
    <%= task.name %>
    <% if !task.person.nil? %>
      <span id="assignment">Assigned to <%= task.person.name %></span>
    <% end %>
  </a>

  <!-- </div> -->

  <table id="option_buttons">
    <tr>
      <td>
        <%= button_to("/tasks/#{task.id}", method: :patch,  title: "Complete") { fa_icon("check fw lg") } %>
      </td>
      <td>
        <%= button_to("/tasks/#{task.id}/edit", method: :get, title: "Edit") { fa_icon("pencil fw lg") } %>
      </td>
      <td>
        <%= button_to("/tasks/#{task.id}", method: :delete, data: { confirm: "Are you sure you want to delete this task?"}, title: "Delete") { fa_icon("trash-o fw lg") } %>
      </td>
    </tr>
  </table>
<% end %>

</div>
</div>
